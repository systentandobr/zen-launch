<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Estado pressionado -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surfaceColorVariant" />
            <corners android:radius="@dimen/corner_radius_large" />
            <stroke
                android:width="2dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>
    
    <!-- Estado focado -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surfaceColor" />
            <corners android:radius="@dimen/corner_radius_large" />
            <stroke
                android:width="2dp"
                android:color="@color/colorAccentLight" />
        </shape>
    </item>
    
    <!-- Estado normal -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surfaceColor" />
            <corners android:radius="@dimen/corner_radius_large" />
            <stroke
                android:width="1dp"
                android:color="@color/borderColor" />
        </shape>
    </item>
    
</selector>

