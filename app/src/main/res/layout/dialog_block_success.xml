<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <ImageView
        android:id="@+id/successIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="Ícone de sucesso"
        android:src="@android:drawable/ic_dialog_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Aplicativos Bloqueados!"
        android:textAppearance="@style/TextAppearance.MindfulLauncher.Headline2"
        android:textColor="?colorPrimary"
        app:layout_constraintTop_toBottomOf="@+id/successIcon" />

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Os aplicativos selecionados foram bloqueados com sucesso. Se você tentar acessá-los, será notificado de acordo com o nível de bloqueio escolhido."
        android:textAppearance="@style/TextAppearance.MindfulLauncher.Body1"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/tipsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Dica: Para maior produtividade, defina metas claras para o período de concentração."
        android:textAppearance="@style/TextAppearance.MindfulLauncher.Caption"
        android:textStyle="italic"
        app:layout_constraintTop_toBottomOf="@+id/messageTextView" />

    <Button
        android:id="@+id/confirmButton"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="OK, entendi"
        app:layout_constraintTop_toBottomOf="@+id/tipsTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
